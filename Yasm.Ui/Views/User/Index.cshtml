@using Yasm.Dao.Model;
@model IEnumerable<User>

@{
    ViewBag.Title = "List of user";
}

<h2>@ViewBag.Title</h2>


<div class="row">
    <p>
        @Html.ActionLink("Create New", "Edit")
    </p>
    <table class="table">
        <tr>
            <th>Id</th>
            <th>Last Name</th>
            <th>First Name</th>
            <th>Login</th>
            <th>Email</th>
            <th></th>
        </tr>
        @foreach (User item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.LastName</td>
                <td>@item.FirstName</td>
                <td>@item.Login</td>
                <td>@item.Email</td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id })<!-- |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })-->
                </td>
            </tr>
        }
    </table>
</div>